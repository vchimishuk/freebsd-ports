#!/bin/sh

# PROVIDE: bsdfan
# REQUIRE: DAEMON
# KEYWORD: shutdown
#
# Add the following to /etc/rc.conf[.local] to enable this service
#
# bsdfan_enable="YES"
#

. /etc/rc.subr

name="bsdfan"
desc="Control fan speed using temperature sensor"
rcvar="bsdfan_enable"
command="/usr/local/bin/${name}"
bsdfan_flags="-d ${bsdfan_flags}"

load_rc_config $name
run_rc_command "$1"
